body
  background #fafafa url('images/content_inner_bg.png')

.navbar
  z-index 1030
  margin-bottom 0
  height 60px
  color #666
  background-color #fff
  border-radius 0
  border 0
  border-bottom 0
  box-shadow 0 1px 0 0 #e0e0e0

.navbar.navbar-shadow
  box-shadow 0px 1px 0px 0px rgba(0, 0, 0, 0.08), 0px 2px 0px 0px rgba(0, 0, 0, 0.02)

.navbar-branding
  position relative
  overflow hidden
  float left
  width 250px
  height 60px
  margin-right 10px
  background-color transparent

.navbar-branding .navbar-brand
  color #666
  height 60px
  line-height 58px
  padding 0
  padding-left 18px
  font-size 17px
  font-weight 400
  letter-spacing 0.5px

#sidebar-left
  background-color #4c4a49
  color #fff
  font-size 13px
  position absolute
  top 0
  left 0
  width 250px
  min-height 100%
  padding-top 60px

#wrapper
  padding-left 250px
  transition all 0.4s ease 0s

#sidebar-wrapper 
  margin-left -250px
  left 250px
  width 250px
  background #000
  position fixed
  height 100%
  overflow-y auto
  z-index 1
  transition all 0.4s ease 0s

.employee-selector

  .selected
    color #f00

#page-content-wrapper 
  width 100%

@media (max-width: 767px) 
  #wrapper 
    padding-left 0

  #sidebar-wrapper 
    left 0

  #wrapper.active 
    position relative
    left 250px
    

  #wrapper.active #sidebar-wrapper 
    left 250px
    width 250px
    transition all 0.4s ease 0s
